@model WheelyRev.Models.Users

@{
    ViewBag.Title = "Login";
}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                <div class="containerT">
                    <h3>WheelyRev</h3>
                    <p>Your one-stop shop for premium vehicle parts and services.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="containerL">
                <h2>Login</h2>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<label>Username</label><br />*@
                        <div class="form-group">
                            @*<div class="col-md-10">*@
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username", @required = true } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                            @*</div>*@
                        </div>

                        @*<label>Password</label><br />*@
                        <div class="form-group">
                            @*<div class="col-md-10">*@
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @required = true, @type = "password" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            @*</div>*@
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-success btn-lg btn-block" />
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Sign-up", "Register")
                </div>
            </div>
        </div>
    </div>

    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
